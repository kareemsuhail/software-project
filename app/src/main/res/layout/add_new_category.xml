<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/newCategoryName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_category_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/newCategoryLimit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_category_limit"
        android:inputType="number" />

    <Button
        android:id="@+id/addNewCategory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/add_new_budget" />
</LinearLayout>
